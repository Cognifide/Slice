<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.2.0 http://maven.apache.org/xsd/assembly-1.2.0.xsd">
	<id>cq</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
		<!-- this set packages all modules except foundation -->
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- All, but self -->
			<excludes>
				<exclude>com.cognifide.slice:slice-assembly</exclude>
				<exclude>com.cognifide.slice:slice-test</exclude>
				<exclude>com.cognifide.slice:slice-base-test</exclude>
				<exclude>com.cognifide.slice:slice-core-test</exclude>
				<exclude>com.cognifide.slice:slice-mapper-test</exclude>
			</excludes>
			
			<!-- items from source folder -->
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				
				<fileSets>
					<fileSet>
						<directory>src/main/cq/jcr_root</directory>
						<outputDirectory>/jcr_root</outputDirectory>
						<excludes>
							<exclude>**/.vlt</exclude>
							<exclude>/libs/**</exclude>
							<exclude>/apps/slice/foundation/**</exclude>
							<exclude>/WEB-INF/**</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
			
			<!-- compiled java classes - jars -->
			<binaries>
				<outputDirectory>/jcr_root/apps/slice/install/20</outputDirectory>
				<unpack>false</unpack>
			</binaries>
			
		</moduleSet>
	</moduleSets>

	<!-- add dependencies - framework classes -->
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>/jcr_root/apps/slice/install/20</outputDirectory>
			<includes>
				<include>org.aopalliance</include>
				<include>com.google.inject</include>
				<include>com.google.inject.extensions</include>
				<include>org.ops4j</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>/jcr_root/apps/slice/install/19</outputDirectory>
			<includes>
				<include>javax.inject</include>
			</includes>
		</dependencySet>
	</dependencySets>

	<!-- other files from parent project -->
	<fileSets>
		<fileSet>
			<directory>src/main/vault/common</directory>
			<filtered>false</filtered>
			<outputDirectory>/META-INF/vault</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/vault/profile/cq</directory>
			<filtered>true</filtered>
			<outputDirectory>/META-INF/vault</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
